  <slide>
    <title>Configuring SkipTo.js</title>
    <contents>
      <pre class="code">
        &lt;script>
          var SkipToConfig = {
            "settings": {
              "skipTo": {
              "headings"     : "h1, h2, h3, h4",
              "main"         : "main, [role=main]",
              "landmarks"    : "[role=navigation], [role=search]",
              "sections"     : "nav",
              "ids"          : "#SkipToA1, #SkipToA2",
              "customClass"  : "MyClass",
              "accesskey"    : "0",
              "wrap"         : "true",
              "visibility"   : "onfocus",
              "attachElement": ".MyCustomClass" // or "attachElement": "#MyCustomId"
              }
            }
          }
          &lt;/script>
      </pre>
    </contents>
  </slide>


